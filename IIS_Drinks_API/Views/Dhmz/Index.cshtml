@model IIS_Drinks_API.Models.DhmzInfo

@{
    var dhmz = ViewBag.Dhmz;
    
    ViewBag.Title = "Temperature";
}

<h2>Get temperature in Croatia</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <label>Type in city name:</label>
    @Html.TextBoxFor(model => model.cityName)
    @Html.ValidationMessageFor(model => model.cityName, "", new { @class = "text-danger" })
    <hr />
    <label>Your temperature is:</label>
    @if (dhmz != null)
    {
        @dhmz.temperature
        <label> C</label>
    }
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Get temperature" class="btn btn-primary mt-3" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
